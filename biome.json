{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"files": {
		"ignore": [
			"src-tauri/*/**",
			"*.js",
			"*.cjs",
			"*.mjs",
			"*.spec.ts",
			"auto-imports.d.ts",
			"components.d.ts",
			"typed-router.d.ts"
		],
		"ignoreUnknown": true
	}
}
